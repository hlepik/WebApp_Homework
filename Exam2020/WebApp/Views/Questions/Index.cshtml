@model IEnumerable<DAL.App.DTO.Question>

@{
    ViewData["Title"] = "Index";
}

<h1 id="titleQuiz">Questions</h1>
 @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create">Create New</a>
        }

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MultipleChoice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPoll)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Quiz)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MultipleChoice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPoll)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Quiz!.QuizName)
            </td>
          <td style="float: right;">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                  <a asp-action="Redirect" asp-route-id="@item.Id">Add new answer</a>
                <form asp-action="DeleteConfirmed" asp-route-id="@item.Id"
                      onclick="return confirm('Are you sure you want to delete this question?')">

                    <button id="deleteButton" type="submit">
                        <a  class="fa fa-trash" ></a>
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
