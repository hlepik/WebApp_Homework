@page
@model RegisterModel
@{
    ViewData["Title"] = @Resources.Areas.Identity.Pages.Account.Register.PageTitle;
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="register-form">
            <h4>@Resources.Areas.Identity.Pages.Account.Register.CreateNewAccount</h4>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group">
                <label asp-for="Input.FirstName">@Resources.Areas.Identity.Pages.Account.Register.GivenName</label>
                <input asp-for="Input.FirstName" class="form-control"/>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName">@Resources.Areas.Identity.Pages.Account.Register.Surname</label>
                <input asp-for="Input.LastName" class="form-control"/>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email">@Resources.Areas.Identity.Pages.Account.Register.Email</label>
                <input asp-for="Input.Email" class="form-control"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">@Resources.Areas.Identity.Pages.Account.Register.Password</label>
                <input asp-for="Input.Password" class="form-control"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">@Resources.Areas.Identity.Pages.Account.Register.ConfirmPassword</label>
                <input asp-for="Input.ConfirmPassword" class="form-control"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">@Resources.Areas.Identity.Pages.Account.Register.ButtonRegister</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">

        @if (Model.PasswordRequirements != null)
        {
            <div id="password-tooltip" class="d-none">
                <partial name="_PasswordRequirementsTooltip" model="Model.PasswordRequirements"/>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
