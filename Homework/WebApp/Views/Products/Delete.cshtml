@model BLL.App.DTO.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>@Resources.Views.Crud.CRUD.Delete</h1>

<h3>@Resources.Views.Crud.CRUD.Confirmation</h3>
<div>
    <hr />
    <partial name="_Details" model="Model"/>


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@Resources.Views.Shared.Buttons.Delete class="btn btn-danger" /> |
        <a asp-action="Index">@Resources.Views.Crud.CRUD.Index</a>
    </form>
</div>
