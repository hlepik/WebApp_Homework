@model WebApp.ViewModels.Booking.BookingCreateEditViewModels

@{
    ViewData["Title"] = "Create";
}

<h4 xmlns="http://www.w3.org/1999/html">@Resources.BLL.App.DTO.Bookings.Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Booking.Until" class="control-label"></label>
                <input asp-for="Booking.Until" class="form-control" />
                <span asp-validation-for="Booking.Until" class="text-danger"></span>
            </div>

            <dt class="col-md-10">

                @Html.DisplayNameFor(model => model.Products.Description)
            </dt>
                <dd class = "col-md-10">
                    @Html.DisplayFor(model => model.Products.Description)
                    <input asp-for="Products.Id" type="hidden" class="form-control" />
                     <input asp-for="Products.Description" type="hidden" class="form-control" />
                </dd>
            <br>

            <div class="form-group">
                <input type="submit" value=@Resources.BLL.App.DTO.Bookings.Reserve class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Crud.CRUD.Index</a>
</div>

