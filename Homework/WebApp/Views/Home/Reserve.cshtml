@model WebApp.ViewModels.Booking.BookingCreateEditViewModels

<h4>@Resources.BLL.App.DTO.Bookings.Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reserve">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Booking.Until" class="control-label"></label>
                <input asp-for="Booking.Until" class="form-control" />
                <span asp-validation-for="Booking.Until" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Products.Id" class="control-label"></label>
                <input asp-for="Products.Description" class="form-control" />
                <input type="hidden" asp-for="Products.Id" class="form-control" />
                <span asp-validation-for="Products.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value=@Resources.BLL.App.DTO.Bookings.Reserve class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Crud.CRUD.Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}