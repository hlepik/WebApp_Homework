@model IEnumerable<BLL.App.DTO.UserBookedProducts>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeBooked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Until)
            </th>

            <th>
                 @Resources.BLL.App.DTO.UserBookedProduct.ProductOwner

            </th>


        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeBooked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Until)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td style="float: right">
                <a asp-action="Details" asp-route-id="@item.Id">@Resources.Views.Crud.CRUD.Details</a> |
                    <form style="float: right" asp-action="DeleteConfirmed" asp-route-id="@item.Id"
                      onclick="return confirm('@Resources.Views.Crud.CRUD.DeleteConfirm')">

                    <button id="deleteButton" type="submit">
                        <a  class="fa fa-trash" ></a>
                    </button>
                    </form>
                </td>
        </tr>
}
    </tbody>
</table>
