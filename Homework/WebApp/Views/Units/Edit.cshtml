@model BLL.App.DTO.Unit

@{
    ViewData["Title"] = "Edit";
}

<h1>@Resources.Views.Crud.CRUD.Edit</h1>

<h4>@Resources.BLL.App.DTO.Units.Unit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
                 <input type="hidden" asp-for="NameId"/>
            <partial name="_CreateEdit" model="Model"/>

            <div class="form-group">
                <input type="submit" value=@Resources.Views.Shared.Buttons.Save class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Crud.CRUD.Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
